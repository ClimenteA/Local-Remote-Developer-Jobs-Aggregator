{
    "name": "MyJobsTracker",
    "version": "0.0.1",
    "description": "keep track of jobs",
    "manifest_version": 3,
    "author": "Alin Climente",
    "action": {
        "default_popup": "index.html",
        "default_title": "MyJobsTracker"
    },
    "permissions": [
        "activeTab",
        "scripting"
    ],
    "content_scripts": [
        {
            "run_at": "document_end",
            "matches": [
                "https://vuejobs.com/*",
                "https://reactjobs.io/*",
                "https://www.ejobs.ro/*",
                "https://www.bestjobs.eu/ro/locuri-de-munca/*",
                "https://jsjobbs.com/jobs*",
                "https://remotive.com/*",
                "https://remoteok.com/*",
                "https://reactjobs.io/*",
                "https://devjob.ro/*",
                "https://euremotejobs.com/*",
                "https://remote.co/*",
                "https://weworkremotely.com/categories/*",
                "https://www.workingnomads.com/*",
                "https://nodesk.co/*"
            ],
            "js": [
                "content-script.js"
            ]
        }
    ]
}